<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Display the contact type, contact parent and contact sub-contacts fields in the form view -->
        <record id="view_partner_form_inherit_contact_type" model="ir.ui.view">
            <field name="name">res.partner.form.inherit.contact.type</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='vat']" position="after">
                    <field name="contact_type"/>
                    <field name="parent_contact_id"
                           placeholder="Select or create a parent contact"
                    />
                </xpath>

                <xpath expr="//notebook" position="inside">
                    <page string="Children Contacts" name="children_contacts">
                        <field name="sub_contact_ids"/>
                    </page>
                </xpath>
            </field>
        </record>

        <!-- Display the contact type and contact parent fields in the list view. -->
        <record id="view_partner_tree_inherit_contact_type" model="ir.ui.view">
            <field name="name">res.partner.tree.inherit.contact.type</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='email']" position="after">
                    <field name="contact_type"/>
                    <field name="parent_contact_id"/>
                </xpath>
            </field>
        </record>

        <!-- Add a filter in the search bar to group by contact type. -->
        <record id="view_res_partner_filter_inherit_contact_type" model="ir.ui.view">
            <field name="name">res.partner.select.inherit.contact.type</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_res_partner_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='group_country']" position="after">
                    <separator/>
                    <filter name="group_contact_type" string="Contact Type" context="{'group_by': 'contact_type'}"/>
                </xpath>
            </field>
        </record>

        <!-- Set the filter 'Group by contact type' as the default filter in the contacts action . -->
        <record id="contacts.action_contacts" model="ir.actions.act_window">
            <field name="context" eval="{'default_is_company': True, 'search_default_group_contact_type': 1}"/>
        </record>

    </data>
</odoo>